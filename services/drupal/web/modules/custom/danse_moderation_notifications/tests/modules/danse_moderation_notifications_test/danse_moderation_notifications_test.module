<?php

/**
 * @file
 * Hook implementations for the content moderation notifications test module.
 */

use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_danse_moderation_notifications_mail_data_alter().
 */
function danse_moderation_notifications_test_danse_moderation_notifications_mail_data_alter(EntityInterface $entity, array &$data) {
  if (\Drupal::state()->get('danse_moderation_notifications_test.alter', FALSE)) {
    // Change mails to verify this hook has been called.
    $data['to'] = [
      'altered@example.com',
      'foo' . $entity->id() . '@example.com',
    ];
  }
}
