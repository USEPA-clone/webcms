{% set link_classes = [
  is_child ? 'node-dialog__link' : 'node-tabs__link',
  is_active ? 'is-active'
]|join(' ')|trim %}

<a 
  class="{{ link_classes }}"
  {% if url %} 
    href="{{ url }}" 
  {% else %}
    role="link"
    aria-disabled="true"
  {% endif %} >
  
  {% if icon %}
    <svg class="icon" aria-hidden="true" role="img">
      <use href="/themes/epa_theme/images/sprite.artifact.svg#{{ icon }}"></use>
    </svg>
  {% endif %}

  {{ title }}
</a>
