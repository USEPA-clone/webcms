{% set link_classes = [
  is_child ? 'node-dialog__link' : 'node-tabs__link',
  is_active ? 'is-active'
]|join(' ')|trim %}

<a 
  class="{{ link_classes }}"
  {% if url %} 
    href="{{ url }}" 
  {% else %}
    role="link"
    aria-disabled="true"
  {% endif %} >
  {% if icon %}
    {% include '@components/icon/icon.twig' with {
      'is_hidden': true,
      'icon_name': icon,
    } %}
  {% endif %}

  {{ title }}
</a>
