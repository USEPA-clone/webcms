{% set link_classes = [
  'node-tabs__link ',
  is_active ? 'is-active',
  is_child ? 'node-dialog__link'
]|join(' ')|trim %}

<a 
  class="{{ link_classes }}"
  {% if url %} 
    href="{{ url }}" 
  {% else %}
    role="link"
    aria-disabled="true"
  {% endif %} >
    {% if icon %}
      {% include '@components/icon/icon.twig' with {
        'is_hidden': true,
        'icon_name': icon,
      } %}
    {% endif %}

    {{ title }}
</a>
