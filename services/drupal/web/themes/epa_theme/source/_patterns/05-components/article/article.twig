{% set additional_attributes = {
  'class': ['article']
} %}

<article {{ add_attributes(additional_attributes) }}>
  {% block title %}
    {% include '@components/page-title/page-title.twig' with {
      'page_title': title
    } %}
  {% endblock %}

  {% block local_tasks %}
    {% if show_local_tasks %}
      {% include '@components/button-group/button-group--base/button-group--base.twig' with {
        'buttons': local_tasks,
      } %}
    {% endif %}
  {% endblock %}

  {% block content %}
    {{ body }}
  {% endblock %}
</article>
