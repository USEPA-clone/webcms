{% set classes = [
  'icon',
  modifier_classes ? modifier_classes,
]|join(' ')|trim %}

{% if is_demo %}
  {% set icons = [
    'check',
    'chevron-down',
    'compare',
    'ex',
    'file',
    'grid',
    'pencil',
    'plus',
    'show',
    'copy',
    'cycle',
    'live',
    'warning',
   ] %}
  {% for icon in icons %}
    <p>
      <svg class="{{ classes }}"{% if is_hidden %} aria-hidden="true"{% endif %}{% if label %} role="img"{% endif %}>
        {% if label %}<title>{{ label }}</title>{% endif %}
        <use href="{{ epa_theme_image_path }}drupal-sprite.artifact.svg#{{ icon }}"></use>
      </svg>
      {{ icon }}
    </p>
  {% endfor %}
{%- else -%}
  {% apply spaceless %}
    <svg class="{{ classes }}"{% if is_hidden %} aria-hidden="true"{% endif %}{% if label %} role="img"{% endif %}>
      {% if label %}<title>{{ label }}</title>{% endif %}
      <use href="{{ epa_theme_image_path }}drupal-sprite.artifact.svg#{{ icon_name }}"></use>
    </svg>
  {% endapply %}
{%- endif -%}
