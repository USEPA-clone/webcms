<nav class="node-tabs" role="navigation" aria-label="Primary tasks">
  <ul>
    {% for item in tabs %}
      <li>
        <a 
          href="{{ item.url }}" 
          class="{% if item.is_active %}is-active{% endif %}"
        >
          {% include '@components/icon/icon.twig' with {
            'is_hidden': true,
            'icon_name': item.icon,
          } %}
          {{ item.title }}
        </a>

        {% if item.children %}
          {% for child in item.children %}
            <li>
              <a 
                href="{{ child.url }}" 
                class="{% if child.is_active %}is-active{% endif %}"
              >
                {{ child.title }}
              </a>
            </li>
          {% endfor %}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>
