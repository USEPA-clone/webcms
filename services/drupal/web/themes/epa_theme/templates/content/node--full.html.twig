{% set classes = [
  'node',
  'node--type-' ~ node.bundle|clean_class,
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  view_mode ? 'node--display-mode-' ~ view_mode|clean_class,
] %}

{% set local_tasks %}
  {{ drupal_entity('block', 'gesso_local_tasks', check_access=false) }}
  {{ drupal_entity('block', 'gesso_local_actions', check_access=false) }}
{% endset %}

{% set attributes = attributes.addClass(classes) %}

{% include '@templates/detail-pages/page.twig' with {
  'title': label,
  'body': content,
  'tasks': local_tasks,
} %}
