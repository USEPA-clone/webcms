{% set classes = [
  'form-item__label',
  title_display == 'after' ? 'is-after',
  title_display == 'invisible' ? 'visually-hidden',
  required ? 'is-required',
  required ? 'js-form-required',
] %}

{% if title is not empty -%}
  {% apply spaceless %}
    <label{{ attributes.addClass(classes) }}>
      {{- title -}}
      {%- if required and title_display != 'after' -%}
        <abbr class="usa-hint usa-hint--required" title="{{ 'required'|t }}">*</abbr>
      {%- endif -%}
    </label>
  {% endapply %}
{%- endif %}
